<% event_sponsors.each do |sponsor| %>
<% if sponsor.level == "bronze" %>
<div class="col s12 l4 m3">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="<%= sponsor.logo_url(:landing)%>">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= sponsor.name %><i class="material-icons right">more_vert</i></span>
      <p class="black-text"><a href="#"><%= sponsor.level %></a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
      <p>Here is some more information about this product that is only revealed once clicked on.</p>
    </div>
    <div class="card-action" style="color:black !important;">
      <%= link_to "Edit", edit_event_eventsponsor_path(@event.id, sponsor.id), class: "btn", remote: true, id: "addSponsor"%>
      <%= link_to "Delete", event_eventsponsor_path(@event.id, sponsor.id), method: :delete, class: "btn", remote: true%>
      <a href="#">This is a link</a><a href="#">This is a link</a></div>
  </div>
</div>
<% end %>
<% end %>
