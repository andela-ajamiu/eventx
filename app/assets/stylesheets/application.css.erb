html, body{
  height: 100%;
  width: 100%;

}

#parallax{
    height: 100%;
    background-image: url('<%= asset_path("best.jpg")%>');
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
}
#event{
    position: absolute;
    height: inherit;
    width: 100%;
    text-align: center;
    margin: auto;
    background-color: rgba(0,0,0,0.4);
}
#event h1{
    color: #fff;
    text-shadow: 2px 1px 1px black;
    font-family: 'Great Vibes', cursive;
    margin:0;
}

#event .home_user_options{
  top: 3%;
  text-align: right;
  position: relative;
  padding-right: 5%
}

#event .home_user_options .home_sign_in_or_up{
  display: inline;
  padding: 10px;
}

#event .home_user_options .home_sign_in_or_up .btn_a_tag{
  text-decoration: none;
  color: #fff;

}

#event .home_app_tag{
  font-size: 40px;
  color: #fff;
  margin: 0;
  margin-bottom: 4px;
}
.home_button{
  font-size: 20px;
  width: 25%;
  border-style: solid #EED8AE;
  border-width: 5px;
  border-radius: 6px;

}
.home_tag{
  position: relative;
  top: 12%;
}
.search_form{
  position: relative;
  top: 15%;
}
.white_text{
  color: #fff;
}
