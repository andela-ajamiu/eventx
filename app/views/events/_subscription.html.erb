<%=  form_for @subscription, url: event_subscriptions_path(event), remote: true do |f| %>
<div id="subscribe" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Subscribe</h4>
    <input type="hidden" name="subscription[user_id]" value="<%= current_user.id %>">
    <p>
      <input type="checkbox" class="filled-in" name="subscription[event_id]" value="<%= @event.id %>" id="filled-in-event" checked="checked"/>
      <label for="filled-in-event">Subscribe to Event</label>
    </p>

    <p>
      <input type="checkbox" class="filled-in" name="subscription[manager_profile_id]" value="<%= @event.manager_profile.id %>" id="filled-in-manager" checked="checked"/>
      <label for="filled-in-manager">Subscribe to Event Manager</label>
    </p>
  </div>
  <div class="modal-footer">
    <%= f.submit "Subscribe", id: "btn_subscribe", class: "btn"%>
  </div>
</div>
<% end %>
