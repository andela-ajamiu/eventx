<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title flow-text">
        <strong>Remittance fee to <%= @manager.company_name %></strong>
        </span>
        <div class="col s6 l6">Request Date</div>
        <div class="col s6 l6"><%= @event.start_date.strftime ("%B %d, %Y")%></div>
        <div class="col s12"><span class="flow-text"><strong>Details </strong></span></div>
        <div class="col s6">Total Ticket Sales</div>
        <div class="col s6"><%= @remit.total_amount %></div>
      </div>
    </div>
    <div class="card-action">
      <a href="#">Confirm this remit</a>
      <a href="#">Reject this remit</a>
    </div>
  </div>
</div>
