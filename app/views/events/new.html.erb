<div class="create_header_background">
  <div class="creat-overlay">
    <%= render partial: "layouts/nav" %>
    <div class="container">
      <h2 class="center">Start your Event Experience
      </h2>
      <p class="center">Create it, Preview it, Publish it!</p>
    </div>
  </div>
</div>
<div class="row" id="create_background">
  <div class="event-section row remove-margin">
    <div class="col s12" style="padding: 0px 0px">
      <ul class="tabs">
        <li class="tab col s3">
          <a class="active our-tab2-color" href="#test1">
            <i class="fa fa-plus"></i>
            Create</a>
        </li>
        <li class="tab col s3">
          <a class="our-tab2-color" href="#test2">
            <i class="fa fa-search "></i>
            Preview</a>
        </li>
        <li class="tab col s3">
          <a class="our-tab2-color" href="#test3">
            <i class="fa fa-globe "></i>
            Publish</a>
        </li>
      </ul>
    </div>
    <div class="col s12" id="test1">
      <div class="container margin-down">
        <div class="row">

            <%= form_for @events, html: {class: "col s12"} do |f| %>
            <div class="row">
              <div class="input-field col s10">
                <i class="fa fa-pencil prefix icon-setting"></i>
                <label>EVENT TITLE
                  <span>*</span>
                </label>
                <%= f.text_field :title, class: "validate", placeholder: 'Give it a short distinct name' %>
              </div>
            </div>

            <div class="row location_form_padding">
              <div class="col l5 m6 s10">
                  <!--<div class="input-field col s10">-->
                    <i class="fa fa-map-marker prefix icon-setting"></i>
                    <label>Location
                      <span>*</span>
                    </label>
                    <%= f.text_field :location, class: "validate", placeholder: 'Enter Location where it will be held' %>
                  <!--</div>-->
              </div>
              <div class="col l5 m6 s10">
                  <!--<div class="input-field col s10">-->
                    <i class="fa fa-map-marker prefix icon-setting"></i>
                    <label>Venue
                      <span>*</span>
                    </label>
                    <%= f.text_field :venue, class: "validate", placeholder: 'Enter Venue where it will be held' %>
                  <!--</div>-->
              </div>
            </div>


            </div>
            <div class="row">
              <div class="col s10 hide-on-med-and-down">
                <div class="map-area">
                  Load Maps Here
                </div>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s5">
                <i class="fa fa-calendar prefix icon-setting"></i>
                <%= f.date_field :start_date, class: "datepicker", placeholder: "Start Date", id: "start_date" %>
              </div>
              <div class="input-field col s5">
                <i class="fa fa-calendar prefix icon-setting"></i>
                <%= f.date_field :end_date, class: "datepicker", placeholder: "End Date", id: "end_date" %>
              </div>
            </div>

            <div class="row col s10">
              <div class="col l6 m6 s8 offset-l3 offset-m3 offset-s2 file-uploader">
                <div class="inner-file-upload center">
                  <span class="events_pic_name">
                    <i class="fa fa-camera"></i>
                    <br/>
                    Upload Event Photo</span>
                </div>
              </div>
            </div>
            <!--<input hidden id="event_photo_upload" type="file">-->
              <%= f.file_field :image,  id: "event_photo_upload" %>
            <div class="row">
              <div class="input-field col s10">
                <i class="fa fa-newspaper-o prefix icon-setting"></i>
               <%= f.text_area :description, rows: 6, placeholder: 'Enter description of event' %>
              </div>
            </div>
            <div class="row ">
              <div class="input-field col s4 offset-s1">
                <a class="waves-effect waves-light btn" id="free_ticket_btn">
                  <i class="material-icons left">add</i>Create Free Tickets</a>
              </div>
              <div class="input-field col s4 offset-s1">
                <a class="waves-effect waves-light btn" id="paid_ticket_btn">
                  <i class="material-icons left">add</i>Create Paid Tickets</a>
              </div>
            </div>
            <div class="row col s12 ticket" id="paid_ticket_div">
              <div class="input-field col s5">
                <i class="fa prefix icon-setting"></i>
                <label>Paid Ticket Title</label>
                <input placeholder="Ticket Title" type="text">

              </div>
              <div class="input-field col s2">
                <label>Quantity</label>
                <input placeholder="100" type="text">
              </div>
              <div class="input-field col s2">
                <label>Price</label>
                <input placeholder="$10.00" type="text">
              </div>
              <div class="input-field col s1">
                <a class="btn-floating btn-large waves-effect waves-light teal" id="close_paid">
                  <i class="material-icons">clear</i>
                </a>
              </div>
            </div>
            <div class="row col s12 ticket" id="free_ticket_div">
              <div class="input-field col s6">
                <i class="fa prefix icon-setting"></i>
                <label>Free Ticket Title</label>
                <input placeholder="Ticket Title" type="text">
              </div>
              <div class="input-field col s3">
                <label>Quantity</label>
                <input placeholder="100" type="text">
              </div>
              <div class="input-field col s1">
                <a class="btn-floating btn-large waves-effect waves-light teal" id="close_free">
                  <i class="material-icons">clear</i>
                </a>
              </div>
            </div>
            <div class="input-field col s6 offset-s3">
              <!--<button class="col s12 btn-large waves-effect waves-light home_button center" href="#test2">Continue</button>-->
              <!--<%= link_to "Continue", "#test2", class: 'col s12 btn-large waves-effect waves-light home_button center tab' %>-->



            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col s12" id="test2">
    <div class="container margin-down">
      <div class="row">

        <div class="col s12">
          <div class="row">
            <div class="input-field col s10">
              <i class="fa fa-link prefix icon-setting"></i>
              <label>Enter Domain Name
                <span>*</span>
              </label>
              <input class="validate" placeholder="http://your-url.eventx.com" type="text">
            </div>
          </div>

          <div class="row category-selected">
            <div class="col s10">

              <div class="row col s12">
                <label>Choose your category</label>
                <div class="input-field">
                  <!--<select class="browser-default">-->
                    <!--<option disabled selected value="">Choose your option</option>-->
                    <!--<option value="1">Event Academy</option>-->
                    <!--<option value="2">Classes</option>-->
                    <!--<option value="3">Conferences</option>-->
                    <!--<option value="3">Endurance Events</option>-->
                    <!--<option value="3">Food & Wine</option>-->
                    <!--<option value="3">Music Festivals</option>-->

                  <!--</select>-->
                  <%= f.select :category_id, [['Person', 'person'], ['Person'], ['Alex']], class: "browser-default" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row radio-select">
            <div class="input-field col s10">
              <label>Select a template</label>
              <div class="temps">
                <!--<%= f.collection_radio_buttons  :event_template_id, EventTemplate.order(:name), :id, :name  %>-->
                <% EventTemplate.all.each do |i|%>
                <span class="col s6 m3 center temp_image">
                  <input id="<%= i.name %>" name="event[event_template_id]" value='<%= i.id %>' type="radio"/>
                  <label for="<%= i.name %>">
                    <%= image_tag "#{i.image}" %>
                  </label>
                </span>
                <% end %>

              </div>
            </div>
          </div>


          </div>
      </div>

    </div>

    <div class="col s3 offset-s4 center">
        <%= f.submit  %>
      <button class="col s12 btn-large waves-effect waves-light home_button center" disabled formaction="#test3">Preview</button>
    </div>
     <% end %>
  </div>
  <div class="col s12" id="test3">Test 3</div>
</div>
