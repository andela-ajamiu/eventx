<div class="parallax-container" id="index-banner">
  <%= render "layouts/nav" %>

  <div class="section no-pad-bot">
    <div class="container">
      <br><br><br><br><br><br>
      <h2 class="header center home_app_title">Bring Your Passions to Life!</h2>
      <br>
      <div class="row center">
        <h5 class="header col s12 light home_app_tag">Manage and Search for Events Around You</h5>
      </div>
      <br>
      <div class="row center">
        <% if can? :create, Event %>
          <%= create_event_or_login("Create Event", ["waves-effect", "waves-light btn-large",  "home_button"]) %>
        <%elsif !current_user %>
          <%= create_event_or_login("Get Started", ["waves-effect", "waves-light btn-large",  "home_button"]) %>
        <%else%>
          <%= become_a_manager("Become An Event Manager", ["waves-effect", "waves-light btn-large",  "home_button"]) %>
        <%end%>
      </div>
      <span class="hide-on-med-and-down"><br><br></span>
    </div>
  </div>
  <div class="parallax"><%= image_tag "special-event.jpg"%></div>
  <a href="#featured_events" class="alert-scroll-under"><%= image_tag("scroll_circle.svg", class: "responsive")%></a>
</div>

