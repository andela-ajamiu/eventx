#parallax{
    height: 700px;
    background-image: url('<%= asset_path("best.jpg")%>');
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
}
#event{
    position: absolute;
    height: inherit;
    width: 100%;
    text-align: center;
    margin: auto;
    background-color: rgba(0,0,0,0.4);
}
#event h1{
    position: relative;
    display: block;
    top: 12%;
    color: #fff;
    text-shadow: 2px 1px 1px black;
    font-family: 'Great Vibes', cursive;
}

#event .home_user_options{
  top: 3%;
  text-align: right;
  position: relative;
  padding-right: 5%
}

#event .home_user_options .home_sign_in_or_up{
  display: inline;
  padding: 10px;
}

#event .home_user_options .home_sign_in_or_up .btn_a_tag{
  text-decoration: none;
  color: #fd0;

}

#event .home_app_tag{
  position: relative;
  top: 9%;
}
