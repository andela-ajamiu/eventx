  </ul>
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center home_app_title">EventX</h1>
      <div class="row center">
        <h5 class="header col s12 light home_app_tag">Simple, Easy, Build it</h5>
      </div>
      <div class="row center">
        <%= link_to "Create Event", events_new_path, id: "create_event", data: { no_turbolink: true }, class: "waves-effect waves-light btn-large  home_button", style: "background-color: #EED8AE; color: #000000"  %>
