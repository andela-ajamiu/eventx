

 <% content_for :show do %>
     <!-- <li><a href="#top">Home</a></li> -->
     <li><a href="#">About</a></li>
     <li><a href="#">Schedule</a></li>
     <li><a href="#">Attendee</a></li>
     <li><a href="#">Venue</a></li>
 <% end%>

 <div class="our_parallax" id="index-banner" style="background: url('<%= @event.image_url(:main)%>')" data-countdown="<%= @event.start_date.strftime('%F') %>">
   <div style="height: 100%; width: 100%; position: absolute; background-color: rgba(0,0,0,0.4)">
     <%= render partial: "layouts/nav" %>
   <div class="section no-pad-bot">
     <div class="container">
       <div class="row center">
         <h3 class="header col s12 light our-event-title"><%= @event.title %></h3>
         <label id="counter"></label>
         <%= content_tag(:label, "#{@event.start_date.strftime("%b %d %Y")} to #{@event.end_date.strftime("%b %d %Y")}", style: "display: block; font-size: 24px; color: white; font-family: 'Roboto', sans-serif;")  %>
         <%= link_to "Attend this event! <i class='fa fa-plus'></i>".html_safe,  attendees_path(:event_id => @event.id), method: :post, class: "btn btn-primary btn-lg our-btn-green"  %>
       </div>
       <div class="row center">

       </div>
       <span class="hide-on-med-and-down"><br><br></span>
     </div>
   </div>
  </div>
 </div>
 <div id="description" class="description">
   <div class="container center">
     <h2 class="our_description_title">Description</h2>
     <p class="our_event_description"><%= @event.description %></p>
     <div class="text-center">
       <a class="atcb-link" tabindex="1" id=""><i class="fa fa-calendar"> </i> Add to My Calendar</a>
     </div>
   </div>
 </div>
<div class="col-md-12" id="venue" class="venue" style="height: 70%; padding:0px">
 <div class="map-overlay"></div>
 <iframe scrolling="no" src=<%= "#{@event.map_url}&output=embed" %> width="100%" height="100%" frameborder="0"></iframe>
</div>
