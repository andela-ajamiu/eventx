<div class="row">
  <div class="dashboard-search">
    <h5 class="col 12"> Manage Staff </h5>
  </div>
</div>

<div class="wrapper">
  <div class="staff">
    <ul class="collection with-header">
      <% @event.event_staffs.each do |staff| %>
        <%= render "manager_profiles/event_staffs", staff: staff %>
      <% end %>
    </ul>
  </div>

  <section id="content" >
    <%= form_tag do |f| %>
      <% disable ||= false %>
      <% allow_delete ||= true %>
      <div class="col s12">
        <div class="container">
          <div class="row">
            <div class="text-field col s3">
              <%= select_tag(:role, options_for_select(@roles))%>
            </div>
            <div class="input-field col offset-s1 s5">
              <input type="text" id = "ent_staff_email" class= "add_staff_field" placeholder="Enter staff email"/>
              <input type="hidden" id = "staff_id" name = "user_id" />
            </div>
            <div class="input-field col s3">
              <%= button_tag  "Submit", id: "save_staff",
              class: "btn waves-effect waves-light home_button center z-depth-0",
                url: :save_staffs_path %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>
