<div id="test1" class="row">
  <form class="col s12 event_border">

    <div class="row create_form" >
      <div class="input-field col s8 offset-s2">
        <i class="fa fa-pencil prefix"></i>
        <input id="event_title" type="text" class="validate">
        <label for="first_name">Event Title</label>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row create_form">
      <div class="input-field col s8 offset-s2">
        <i class="fa fa-map-marker prefix"></i>
        <input id="location" type="text" class="validate">
        <label for="location">Location</label>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row create_form">
      <div class="input-field col s4 offset-s2">
        <i class="fa fa-calendar prefix"></i>
        <input id="start_date" type="date" class="datepicker">
        <label for="start_date">Start Date</label>
      </div>
      <div class="input-field col s4">
        <i class="fa fa-calendar prefix"></i>
        <input id="end_date" type="date" class="datepicker">
        <label for="end_date">End Date</label>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row create_form">
      <div class="input-field col s8 offset-s2">
        <i class="fa fa-youtube prefix"></i>
        <input id="url" type="url" class="validate">
        <label for="url">Youtube link</label>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row create_form">
      <div class="input-field col s8 offset-s2">
        <i class="fa fa-pencil-square-o prefix"></i>
        <textarea id="textarea1" class="materialize-textarea" length="1000" maxlength="1000"></textarea>
        <label for="textarea1">Description</label>
      </div>
    </div>

    <div class="divider"></div>

    <div class="row create_form">
      <div class="input-field col s10 offset-s2">
        <i class="fa fa-ticket prefix" id="ticket_icon"></i>
        <label >Create Tickets</label>
        <br><br>
      </div>
    </div>

    <div class="row ">
      <div class="input-field col s3 offset-s2">
        <a class="waves-effect waves-light btn-large" id="free_ticket_btn"><i class="material-icons left">add</i>Create Free Tickets</a>
      </div>
      <div class="input-field col s3 offset-s2">
        <a class="waves-effect waves-light btn-large" id="paid_ticket_btn"><i class="material-icons left">add</i>Create Paid Tickets</a>
      </div>
    </div>

    <div class="row " id="paid_ticket_div" style="display: none;">
      <div class="input-field col s4 offset-s2">
        <input id="ticket_category" type="text" class="validate">
        <label for="ticket_category">Ticket Title</label>
      </div>
      <div class="input-field col s2">
        <input id="ticket_category" type="number" class="validate">
        <label for="ticket_category">Quantity</label>
      </div>
      <div class="input-field col s2">
        <input id="ticket_category" type="number" class="validate">
        <label for="ticket_category">Price</label>
      </div>
      <div class="input-field col s1">
        <a class="btn-floating btn-large waves-effect waves-light teal" id="close_paid"><i class="material-icons">clear</i></a>
      </div>
    </div>

    <div class="row " id="free_ticket_div" style="display: none " >
      <div class="input-field col s4 offset-s2">
        <input id="ticket_category" type="text" class="validate">
        <label for="ticket_category">Ticket Title</label>
      </div>
      <div class="input-field col s2">
        <input id="ticket_category" type="number" class="validate">
        <label for="ticket_category">Quantity</label>
      </div>
      <div class="input-field col s1">
        <a class="btn-floating btn-large waves-effect waves-light teal" id="close_free"><i class="material-icons">clear</i></a>
      </div>
    </div>

  </form>

</div>